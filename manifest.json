{
    "manifest_version": 3,
    "name": "WordVeil",
    "version": "1.0",
    "description": "Customizable word-blocking extension that blocks words tailored to your own user experience ",

    "permissions": [
        "activeTab",
        "storage",
        "tabs",
        "scripting",
        "tabs"
    ],
    "icons": {
        "128" : "icon128.png",
        "48" : "icon48.png",
        "16" : "icon16.png"
    },

    "action": {
      "default_popup": "popup.html",
      "default_title": "WordVeil",
      "default_icon": "icon128.png"
    },

    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "/data.js",
                "/execute.js"

            ]
        }
    ]
}
